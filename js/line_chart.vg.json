{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Migration Arrivals by Continent and Country",
    "width": "container",
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/drewpri411/FIT3179_W10_HW/main/data/updated_arrivals_soe_with_monthly_totals.csv",
      "format": {
        "type": "csv"
      }
    },
    "params": [
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [null, "Asia", "Europe", "Africa", "Americas", "Oceania"],
          "labels": ["Show All", "Asia", "Europe", "Africa", "Americas", "Oceania"],
          "name": "Continent Selection: "
        }
      },
      {
        "name": "Year_selection",
        "bind": {
          "input": "range",
          "min": 2020,
          "max": 2024,
          "step": 1,
          "name": "Select Year: "
        },
        "value": 2022
      }
    ],
    "transform": [
      {
        "filter": "Continent_selection == null || datum.Continent == Continent_selection"
      },
      {
        "calculate": "year(datum.date)",
        "as": "Year"
      },
      {
        "filter": "datum.Year == Year_selection"
      }
    ],
    "mark": {
      "type": "line",
      "point": true, 
      "interpolate": "monotone" 
    },
    "encoding": {
      "x": {
        "field": "date",
        "type": "temporal",
        "title": "Date"
      },
      "y": {
        "field": "arrivals_monthly_total",
        "type": "quantitative",
        "title": "Monthly Arrivals",
        "axis": { "tickCount": 7 },
        "scale": {
          "type": "log",
          "domain": [1, 10000000],
          "clamp":true
        }
      },
      "color": {
        "field": "country",
        "type": "nominal",
        "title": "Country"
      },
      "tooltip": [
        {
          "field": "country",
          "type": "nominal",
          "title": "Country"
        },
        {
          "field": "date",
          "type": "temporal",
          "title": "Date"
        },
        {
          "field": "arrivals_monthly_total",
          "type": "quantitative",
          "title": "Monthly Arrivals"
        }
      ]
    }
  }
  