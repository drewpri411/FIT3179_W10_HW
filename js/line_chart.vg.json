{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Migration Arrivals by Continent and Country",
    "width": "container",
    "data": {
      "url": "path/to/arrivals_soe_with_continent.csv", 
      "format": {
        "type": "csv"
      }
    },
    "params": [
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "Asia",
            "Europe",
            "Africa",
            "Americas",
            "Oceania"
          ],
          "labels": [
            "Show All",
            "Asia",
            "Europe",
            "Africa",
            "Americas",
            "Oceania"
          ],
          "name": "Continent Selection: "
        }
      }
    ],
    "transform": [
      {
        "filter": "Continent_selection == null || datum.Continent == Continent_selection"
      }
    ],
    "mark": {
      "type": "line",
      "interpolate": "monotone"
    },
    "encoding": {
      "x": {
        "field": "date",
        "type": "temporal",
        "title": "Date"
      },
      "y": {
        "field": "arrivals",
        "type": "quantitative",
        "title": "Arrivals"
      },
      "color": {
        "field": "country",
        "type": "nominal",
        "title": "Country"
      },
      "tooltip": [
        {
          "field": "country",
          "type": "nominal",
          "title": "Country"
        },
        {
          "field": "date",
          "type": "temporal",
          "title": "Date"
        },
        {
          "field": "arrivals",
          "type": "quantitative",
          "title": "Arrivals"
        }
      ]
    }
  }
  